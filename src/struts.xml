	<!--  관리자 장난감 리스트 액션 -->
	 	<action name="AdminToyListAction" class="admin.AdminToyListAction">
			<result>/admin/AdminToyList.jsp</result>
		</action> 
	<!-- 관리자 장난감 등록 액션 -->	
  		<action name="AdminToyWriteForm" class="admin.AdminToyWriteAction" method="form">
